{
  "manifest_version": 3,
  "name": "Git Repo Restrictor",
  "version": "0.1.0",
  "description": "Blocks actions on specified GitHub repositories.",
  "permissions": ["storage"],
  "host_permissions": ["https://github.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"]
    }
  ]
}
